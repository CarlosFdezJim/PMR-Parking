            <Entry Placeholder="User Password"  x:Name="UserLoginPassword"></Entry>
            <Button BackgroundColor="Black" Clicked="Button_Login" TextColor="White" Text="Login" x:Name="loginbutton"/>-->
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>