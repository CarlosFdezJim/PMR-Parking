<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PMR_Parking.RegisterPage">

    <ContentPage.Content>
        <StackLayout Margin="20" VerticalOptions="CenterAndExpand" Spacing="20" Orientation="Vertical">
            <Image Source="icons8_expand_arrow.png" Opacity="0.6" VerticalOptions="Start" Margin="0,0,0,0"/>
            <Label Text="Registrate aquí" TextColor="#485992" HorizontalTextAlignment="Center" FontSize="Large" />
            <Entry Placeholder="Email" x:Name="UserNewEmail"></Entry>
            <Entry Placeholder="Contraseña" IsPassword="True" x:Name="UserNewPassword"></Entry>
            <Entry Placeholder="Repita Contraseña" IsPassword="True" x:Name="UserNewPassword2"></Entry>
            <Button BackgroundColor="#485992" TextColor="White" Text="Signup" Clicked="Button_Register" x:Name="signupbutton"/>
            
