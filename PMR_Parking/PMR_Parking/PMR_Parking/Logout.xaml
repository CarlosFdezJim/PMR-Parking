<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PMR_Parking.Logout">
    
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Orientation="Vertical">
            <Label Text="¿Está seguro que desa salir?" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center" TextColor="#485992" FontSize="36"/>
            <Label Text="¿Está seguro que desa salir?" x:Name="MyUserName" VerticalOptions="CenterAndExpand" HorizontalTextAlignment="Center" TextColor="#485992" FontSize="36"/>
            <Button x:Name="Exit" Text="Logout" BackgroundColor="#485992" TextColor="White" Clicked="Logout_Clicked" VerticalOptions="End" HorizontalOptions="CenterAndExpand" HeightRequest="50" WidthRequest="500"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>